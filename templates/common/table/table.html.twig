{% set filterForm = filterForm|default(false) %}

{% if filterForm is defined and filterForm %}
    {% form_theme filterForm '@DevsterCms/form/tailwind_theme.html.twig' %}
{% endif %}

<div class="border p-4 rounded-xl shadow-sm overflow-hidden bg-white">
    <div class=" grid gap-3 md:flex md:justify-between md:items-center">
        {% block heading %}
            <div>
                <h2 class="text-lg font-medium text-gray-800 dark:text-gray-200">
                    {% block title %}{% endblock %}
                </h2>
            </div>

            {% if block('heading_buttons')|trim %}
                <div>
                    <div class="inline-flex gap-x-2">
                        {% block heading_buttons %}
                            {% block filters_controls %}{% endblock %}
                        {% endblock %}
                    </div>
                </div>
            {% endif %}
        {% endblock %}
    </div>
    <!-- End Header -->

    <!-- Filters -->
    <div class="py-2">
        {% block filters %}{% endblock %}
    </div>

