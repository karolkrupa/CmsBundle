<{{ tag|default('a') }} class="
{% block class %}
    inline-flex items-center gap-x-2 text-sm
    rounded-lg disabled:opacity-50
    disabled:pointer-events-none
    {{ class|default('') }}
{% endblock %}
{% block colorClass %}
    hover:text-gray-800
{% endblock %}
"

{% if href is defined %}
    href="{% block href %}{{ href }}{% endblock %}"
{% endif %}

{% if attr is defined %}
    {% for name, val in attr %}
        {{ name }}="{{ val }}"
    {% endfor %}
{% endif %}
>
{% block text %}{{ text }}{% endblock %}
</{{ tag|default('a') }}>