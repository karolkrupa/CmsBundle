{% if href is defined and href %}
    {% set tag = 'a' %}
{% endif %}

<{{ tag|default('a') }} class="
{% block class %}
    py-2 px-3 inline-flex items-center
    gap-x-2 text-sm font-medium rounded-md border
    border-gray-200 shadow-sm
    disabled:opacity-50 disabled:pointer-events-none
    {{ class|default('') }}
{% endblock %}
{% block colorClass %}
    text-gray-800 bg-white hover:bg-gray-50
{% endblock %}
"

{% if href is defined and href %}
    href="{% block href %}{{ href }}{% endblock %}"
{% endif %}

{% if attr is defined %}
    {% for name, val in attr %}
    {{ name }}="{{ val }}"
    {% endfor %}
{% endif %}
>
{% block text %}{{ text }}{% endblock %}
</{{ tag|default('a') }}>