<a
        class="group inline-flex items-center gap-x-2"
{% for attr, value in options|default([]) %}
{{ attr }}="{{ value }}"
{% endfor %}
>

<span class="">
    {{ text }}
</span>
<svg class="flex-shrink-0 w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" width="24"
     height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    {% if sorted and direction == 'asc' %}
        <path style="opacity: .3" d="m7 15 5 5 5-5"></path>
        <path d="m7 9 5-5 5 5"></path>
    {% elseif sorted %}
        <path d="m7 15 5 5 5-5"></path>
        <path style="opacity: .3" d="m7 9 5-5 5 5"></path>
    {% else %}
        <path d="m7 15 5 5 5-5"></path>
        <path d="m7 9 5-5 5 5"></path>
    {% endif %}
</svg>
</a>


